<% layout('layouts/base.ejs') %>

<div class="container pb-5">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-6 col-md-8 col-12">
      <div class="card shadow-sm">
        <div class="card-body px-5 pb-3">
          <h3 class="card-title text-center mb-4 fw-bold">プロフィール登録</h3>

          <form action="/maid/create" method="POST" enctype="multipart/form-data">
            <!-- メイド名 -->
            <div class="mb-3">
              <label for="name" class="form-label fw-bold">メイド名(ひらがな6文字まで)*</label>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-person"></i></span>
                <input type="text" name="name" class="form-control" placeholder="メイド名を入力" required>
              </div>
            </div>

            <!-- クラス番号 -->
            <div class="mb-3">
              <label for="classNumber" class="form-label fw-bold">クラス番号(シフト表参照)*</label>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-sort-numeric-up"></i></span>
                <select name="classNumber" class="form-control" required>
                  <option value="" disabled selected>クラス番号を選択</option>
                  <!-- 1〜33のクラス番号を生成 -->
                  <% for (let i = 1; i <= 33; i++) { %>
                  <option value="<%= i %>"><%= i %></option>
                  <% } %>
                </select>
              </div>
            </div>

            <!-- 属性 -->
            <div class="mb-3">
              <label for="attribute" class="form-label fw-bold">メイドの属性</label>
              <input type="text" name="attribute" class="form-control" placeholder="属性を入力">
            </div>

            <!-- 出身 -->
            <div class="mb-3">
              <label for="from" class="form-label fw-bold">出身</label>
              <input type="text" name="from" class="form-control" placeholder="出身を入力">
            </div>

            <!-- スキル -->
            <div class="mb-3">
              <label for="skill" class="form-label fw-bold">特技</label>
              <input type="text" name="skill" class="form-control" placeholder="特技を入力">
            </div>

            <!-- 趣味 -->
            <div class="mb-3">
              <label for="hobby" class="form-label fw-bold">趣味*</label>
              <input type="text" name="hobby" class="form-control" placeholder="趣味を入力" required>
            </div>

            <!-- 血液型 -->
            <div class="mb-3">
              <label for="bloodType" class="form-label fw-bold">血液型や星座</label>
              <input type="text" name="bloodType" class="form-control" placeholder="血液型を入力">
            </div>

            <!-- 好きなもの -->
            <div class="mb-3">
              <label for="favorite" class="form-label fw-bold">好きなもの</label>
              <input type="text" name="favorite" class="form-control" placeholder="好きなものを入力">
            </div>

            <!-- 好きな食べ物 -->
            <div class="mb-3">
              <label for="favoriteFood" class="form-label fw-bold">好きな食べ物</label>
              <input type="text" name="favoriteFood" class="form-control" placeholder="好きな食べ物を入力">
            </div>

            <!-- 写真 -->
            <div class="mb-3">
              <label for="imageUpload" class="form-label fw-bold">写真やアイコン</label>
              <div class="input-group">
                <input type="file" name="image" id="imageUpload" class="form-control" accept="image/*">
              </div>
            </div>

            <!-- 登録ボタン -->
            <button type="submit" class="btn btn-primary w-100 py-2">
              <i class="bi bi-check-circle-fill"></i> 登録
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link rel="stylesheet" href="/stylesheets/registMaid.css">