<% layout('layouts/base.ejs') %>

<div class="container pb-5">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-9 col-md-10 col-11 pt-3">
      <div class="mb-3">
        <h3 class="section-title">メイド一覧</h3>
        <% if (maids.length) { %>
        <div class="row d-flex justify-content-center mt-2">
          <% for (let maid of maids) { %>
          <div class="col-lg-6 col-md-8 col-10 mb-4">
            <div class="card product-card h-100 shadow-sm">
              <div class="card-body text-center">
                <% if (maid.image) { %>
                <img src="<%= maid.image %>" class="profileImage" alt="メイドの画像">
                <% }else {%>
                <img src="/img/メイド.png" class="profileImage" alt="メイドの画像">
                <% } %>

                <p class="card-title"><%= maid.name %></p>
                <a href="/maid/<%= maid._id %>" class="btn btn-success">プロフィールを確認</a>
              </div>
            </div>
          </div>
          <% } %>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<link rel="stylesheet" href="/stylesheets/showMaids.css">