<% layout('layouts/base.ejs') %>

<div class="container pb-5">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-6 col-md-8 col-12">
      <div class="card shadow-sm">
        <div class="card-body px-5 pb-3">
          <h3 class="card-title text-center mb-4">メニューの変更</h3>
          <hr class="mb-4">
          <form action="/product/<%= product._id %>?_method=PUT" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label fw-bold">メニュー名</label>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-cup-straw"></i></span>
                <input type="text" name="name" class="form-control" placeholder="メニュー名を入力" value="<%= product.name %>" required>
              </div>
            </div>

            <div class="mb-4">
              <label for="price" class="form-label fw-bold">価格</label>
              <div class="input-group">
                <span class="input-group-text">¥</span>
                <input type="number" name="price" class="form-control" placeholder="価格を入力" min="0" value="<%= product.price %>" required>
              </div>
            </div>

            <div class="mb-4">
              <label for="category" class="form-label fw-bold">カテゴリ</label>

              <div class="form-check">
                <input class="form-check-input" type="radio" name="category" id="categoryRadio2" value="food" <%= product.category ==='food' ? 'checked' : '' %>>
                <label class="form-check-label" for="categoryRadio2">
                  料理
                </label>
              </div>

              <div class="form-check">
                <input class="form-check-input" type="radio" name="category" id="categoryRadio1" value="drink" <%= product.category ==='drink' ? 'checked' : '' %>>
                <label class="form-check-label" for="categoryRadio1">
                  ドリンク
                </label>
              </div>

              <div class="form-check">
                <input class="form-check-input" type="radio" name="category" id="categoryRadio3" value="others" <%= product.category ==='others' ? 'checked' : '' %>>
                <label class="form-check-label" for="categoryRadio2">
                  その他
                </label>
              </div>
            </div>

            <div class="mb-4">
              <label for="description" class="form-label fw-bold">備考欄</label>
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fas fa-pencil-alt"></i> <!-- アイコン -->
                </span>
                <textarea name="description" class="form-control" placeholder="説明を入力" rows="3" required><%= product.description %></textarea>
              </div>
            </div>

            <button type="submit" class="btn btn-success w-100 py-2">
              <i class="bi bi-check-circle-fill"></i> 変更
            </button>
          </form>
          <hr>
          <form action="/product/<%= product._id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger w-100 py-2">
              <i class="bi bi-trash-fill"></i> 削除
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link rel="stylesheet" href="/stylesheets/editProduct.css">